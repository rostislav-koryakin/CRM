@model FormScoreRuleViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Edit Score Rule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Criteria" class="control-label"></label>
                <select asp-for="Criteria" class="form-control" asp-items="Html.GetEnumSelectList<FormScoreRuleViewModel.RuleCriteria>()">
                    <option selected="selected" value="">---Select Criteria---</option>
                </select>
                <span asp-validation-for="Criteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RelationSymbol" class="control-label"></label>
                <select asp-for="RelationSymbol" class="form-control" asp-items="Html.GetEnumSelectList<FormScoreRuleViewModel.ScoreRelationSymbol>()">
                    <option selected="selected" value="">---Select Relation---</option>
                </select>
                <span asp-validation-for="RelationSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Points" class="control-label"></label>
                <input asp-for="Points" class="form-control" />
                <span asp-validation-for="Points" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="UpdatedDate" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
